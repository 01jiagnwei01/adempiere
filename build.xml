<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project adempierePOS">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="/opt/Development/workspace"/>
    <property name="dir.jarfile" value="${dir.buildfile}"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/POSClient.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="org.adempiere.pos.test.POSClient"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="${dir.workspace}/adempierePOS/bin"/>
            <fileset dir="${dir.workspace}/adempiere_380/bin">
                <include name="**/MSession.class"/>
            	 <include name="**/AKeyboardFocusManager.class"/>
            	<include name="**/CFrame.class"/>
            	<include name="**/swing/*.class"/>
            	<include name="**/ALogin*.class"/>
            	<include name="**/AGlassPane.class"/>
            	<include name="**/WindowMenu.class"/>
            	<include name="**/org/compiere/images/*.*"/>
            	<include name="**/plaf/*.class"/>
            	<include name="**/ConfirmPanel.class"/>
            	<include name="**/CPrinter.class"/>
            	<include name="**/ed/*.class"/>
            	<include name="**/CImage.class"/>
            	<include name="**/GridField.class"/>
            	<include name="**/org/compiere/db/*.*"/>
            	<include name="**/org/adempiere/as/*.class"/>
            	<include name="**/CConnection.class"/>
            	<include name="**/AdempiereException.class"/>
            	<include name="**/*StatusBar.class"/>
            	<include name="**/org/compiere/util/*.class"/>
            	<include name="**/Language.class"/>
            	<include name="**/dbPort/*.class"/>
            	<include name="**/dbPort/*.class"/>
            	<include name="**/DBException.class"/>
            	<include name="**/MSysConfig.class"/>
            	<include name="**/Adempiere.class"/>
            	<include name="**/AFocusTraversalPolicy.class"/>
            	<include name="**/CDialog*.*"/>
            	<include name="**/FormFrame*.*"/>
            	</fileset>
        	    
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/adempiere_380/tools/lib/mail.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/adempiere_380/tools/lib/log4j.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/adempiere_380/tools/lib/ojdbc6.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/adempiere_380/tools/lib/jnlp.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/adempiere_380/tools/lib/commons-collections-3.1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/adempiere_380/tools/lib/postgresql.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/adempiere_380/tools/lib/c3p0-0.9.1.2.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${dir.workspace}/adempiere_380/tools/lib/looks-2.0.4.jar"/>
        	
        	
        </jar>
    </target>
</project>
